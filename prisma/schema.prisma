generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  tasks     Task[]
  contexts  Context[]
  createdAt DateTime @default(now())
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(PENDING)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  contexts  Context[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Context {
  id        String   @id @default(uuid())
  content   String   // notes, progress, thoughts
  source    String?  // manual | system | ai

  userId String
  user   User   @relation(fields: [userId], references: [id])

  taskId String?
  task   Task?  @relation(fields: [taskId], references: [id])

  createdAt DateTime @default(now())
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}
